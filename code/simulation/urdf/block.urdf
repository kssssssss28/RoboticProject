<?xml version="1.0"?>
<robot name="conveyor_belt">
  <material name="trans">
    <color rgba="0 0 1.0 1 0"/>
  </material>
  <link name="base_link">

    <inertial>
      <mass value="70" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
      <collision>
      <geometry>
        <box size="2 100 0.1" />
      </geometry>
    </collision>
    <visual>
            <material name="trans"/>
      <geometry>
       <box size="2 100 0.1" />
      </geometry>
    </visual>
  </link>

  <link name="belt_link">
    <inertial>
      <mass value="50" />
            <origin rpy="0 0 0" xyz="0 0 0.3" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
    <collision>
     <origin rpy="0 0 0" xyz="0 -20 0.3" />
      <geometry>
        <box size="1 50 0.1" />
      </geometry>
    </collision>
    <visual>
        <origin rpy="0 0 0" xyz="0 -20 0.3" />
      <geometry>
        <box size="1 50 0.1" />
      </geometry>
    </visual>
  </link>




  <joint name="prismatic_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="belt_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-500000000" upper="500000000" effort="500000000" velocity="5.0"/>
   </joint>



</robot>
